+++ b/preconfig_rocm.sh
@@ -0,0 +1,6 @@
+# check we are in right directory
+if [[ -f ./preconfig_rocm.sh && -f ./setup.py ]]; then
+    if [ -d build ]; then
+        python ./setup.py clean
+    fi
+fi
