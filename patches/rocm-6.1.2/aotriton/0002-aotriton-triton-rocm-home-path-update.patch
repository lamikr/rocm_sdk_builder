 add_definitions( -DROCM_DEFAULT_DIR="${ROCM_DEFAULT_DIR}")
 
 # Ensure Python3 vars are set correctly
@@ -211,6 +211,10 @@ if(EXISTS "$ENV{ROCM_PATH}/lib/libhsa-runtime64.so" )
