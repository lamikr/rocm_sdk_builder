   )
+elseif(EXISTS "$ENV{ROCM_PATH}/lib64/libhsa-runtime64.so" )
+  set(ROCM_LIBRARIES
+    "$ENV{ROCM_PATH}/lib64/libhsa-runtime64.so"
+  )
 elseif(EXISTS "${ROCM_DEFAULT_DIR}/lib/libhsa-runtime64.so" )
   set(ROCM_LIBRARIES
     "${ROCM_DEFAULT_DIR}/lib/libhsa-runtime64.so"
